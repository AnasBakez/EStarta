<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ItemsListFragment">

    <fragment
        android:id="@+id/ItemsListFragment"
        android:name="com.estarta.itemslist.presentation.view.ItemsListFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_items_list">
        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/ItemDetails"/>
    </fragment>
    <fragment
        android:id="@+id/ItemDetails"
        android:name="com.estarta.itemdetails.presentation.ItemDetailsFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_itemdetails">
        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/ItemsListFragment"/>
    </fragment>
</navigation>